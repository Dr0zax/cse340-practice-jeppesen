<%- include('../../partials/header') %>

    <h1><%= title %></h1>
    <p>
        Register for a new account by providing your information below. All fields are required and passwords must meet security requirements.
    </p>

    <form method="POST" action="/register" class="registration-form">
        <div class="form-group">
            <label for="name">Name</label>
            <input type="text" id="name" name="name" placeholder="John Doe" minlength="7" required>
        </div>

        <div class="form-group">
            <label for="email">Email</label>
            <input type="email" id="email" name="email" placeholder="example@email.com" required>
        </div>

        <div class="form-group">
            <label for="confirmEmail">Confirm Email</label>
            <input type="email" id="confirmEmail" name="confirmEmail" placeholder="example@email.com" required>
        </div>

        <div class="form-group">
            <label for="email">Password</label>
            <input type="password" id="password" name="password" minlength="8" pattern="(?=.*[0-9])(?=.*[!@#$%^&*]).*" required>
        </div>

        <div class="form-group">
            <label for="confirmPassword">Confirm Password: </label>
            <input type="password" id="confirmPassword" name="confirmPassword" required>
        </div>

        <button type="submit">Register</button>
    </form>

<%- include('../../partials/footer') %>