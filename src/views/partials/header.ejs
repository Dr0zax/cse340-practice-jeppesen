<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <link rel="stylesheet" href="/css/main.css">
    <%- renderStyles() %>
    <%- renderScripts() %>

    <% if (NODE_ENV.includes('dev')) { %>
     <script>
        const host = window.location.hostname;
        const currentPort = window.location.port;

        const wsPort = currentPort ? (parseInt(currentPort) + 1) : 3000;
        
        const ws = new WebSocket(`ws://${host}:${wsPort}`);
        ws.onclose = () => {
            setTimeout(() => location.reload(), 2000);
        }
     </script>
    <% } %>
</head>
<body >
    <header>
        <nav class="<%= navClass %>">
            <ul>
                <li><a href="/">Home</a></li>
                <li><a href="/about">About</a></li>
                <li><a href="/catalog">Catalog</a></li>
                <li><a href="/faculty">Faculty</a></li>
                <li><a href="/demo">Demo</a></li>
                <li><a href="/contact">Contact Me</a></li>
                
                <% if (isLoggedIn) { %>
                    <li><a href="/dashboard">Dashboard</a></li>
                    <li><a href="/users">All Users</a></li>
                    <li><a href="/contact/responses">Contact Responses</a></li>
                    <li><a href="/logout">Logout</a></li>
                <% } else { %>
                        <li><a href="/login">Login</a></li>
                        <li><a href="/register">Register</a></li>
                <% } %>
            </ul>
        </nav>
        <p><%= greeting %></p>
    </header>
    <main>
        <% const messages = flash(); %>
        <% Object.keys(messages).forEach(type => { %>
            <% if (messages[type].length > 0) { %>
                <div class="alert <%= type %>">
                    <% messages[type].forEach(msg => { %>
                        <p><%= msg %></p>
                    <% }); %>
                </div>
            <% } %>
        <% }); %>